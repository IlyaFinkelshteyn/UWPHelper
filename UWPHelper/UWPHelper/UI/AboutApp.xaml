<UserControl x:Class="UWPHelper.UI.AboutApp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:UWPHelper.UI"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="300"
             d:DesignHeight="350"
             >
    <StackPanel>
        <StackPanel.Resources>
            <Thickness x:Key="AboutAppGapMargin">0,0,0,10</Thickness>
            <x:Double x:Key="HyperLinkIconFontSize">11</x:Double>

            <Style TargetType="HyperlinkButton" BasedOn="{StaticResource TextBlockButtonStyle}"/>
        </StackPanel.Resources>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="FeedbackStates">
                <VisualState>
                    <VisualState.StateTriggers>
                        <StateTrigger IsActive="{x:Bind FeedbackSupported}"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="SP_Feedback.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <TextBlock x:Uid="About"
                   Style="{StaticResource TitleTextBlockStyle}"
                   Margin="{StaticResource TitleGapMargin}"
                   />

        <StackPanel Orientation="Horizontal">
            <Border Background="{ThemeResource SystemControlBackgroundAccentBrush}"
                    Margin="{StaticResource AboutAppGapMargin}"
                    >
                <Image Source="{x:Bind AppLogoPath, Mode=OneWay}" Width="71" Height="71"/>
            </Border>

            <StackPanel Padding="15,0,0,0">
                <TextBlock Text="{x:Bind AppName}"/>
                <TextBlock Text="{x:Bind AppVersion}"/>
                <TextBlock>
                    &#x00A9; 2016 <Run Text="{x:Bind AppPublisher}"/>
                </TextBlock>
            </StackPanel>
        </StackPanel>

        <TextBlock Foreground="{StaticResource LightTextForegroundBrush}"
                   FontSize="12"
                   Margin="{StaticResource AboutAppGapMargin}"
                   >
            <Run x:Uid="JsonNETLinkStart"/>
            <Hyperlink UnderlineStyle="None" NavigateUri="http://www.newtonsoft.com/json">Json.NET</Hyperlink>
            <Run x:Uid="JsonNETLinkEnd"/>
        </TextBlock>

        <!-- Inspired by an app called Bakaláři -->
        <HyperlinkButton Click="Hyperlink_Click">
            <TextBlock>
                <Run Text="&#xE14D;" FontFamily="Segoe MDL2 Assets" FontSize="{StaticResource HyperLinkIconFontSize}"/>
                <Run Text="{x:Bind AppStoreLink}"/>
            </TextBlock>
        </HyperlinkButton>
        <HyperlinkButton Click="Hyperlink_Click">
            <TextBlock>
                <Run Text="&#xE24A;" FontFamily="Segoe MDL2 Assets" FontSize="{StaticResource HyperLinkIconFontSize}"/>
                <Run x:Uid="RateApp"/>
            </TextBlock>
        </HyperlinkButton>
        <HyperlinkButton Click="Hyperlink_Click">
            <TextBlock>
                <Run Text="&#xE72D;" FontFamily="Segoe MDL2 Assets" FontSize="{StaticResource HyperLinkIconFontSize}"/>
                <Run x:Uid="ShareApp"/>
            </TextBlock>
        </HyperlinkButton>
        <HyperlinkButton Click="Hyperlink_Click">
            <TextBlock>
                <Run Text="&#xE1A6;" FontFamily="Segoe MDL2 Assets" FontSize="{StaticResource HyperLinkIconFontSize}"/>
                <Run x:Uid="MoreAppsByPublisher"/>
            </TextBlock>
        </HyperlinkButton>
        <HyperlinkButton Margin="{StaticResource AboutAppGapMargin}" Click="Hyperlink_Click">
            <TextBlock>
                <Run Text="&#xE715;" FontFamily="Segoe MDL2 Assets" FontSize="{StaticResource HyperLinkIconFontSize}"/>
                <Run x:Uid="ContactDeveloper"/>
            </TextBlock>
        </HyperlinkButton>

        <StackPanel x:Name="SP_Feedback" x:DeferLoadStrategy="Lazy" Visibility="Collapsed">
            <Button Margin="0,0,0,8" Click="OpenFeedbackHub">
                <TextBlock>
                    <Run Text="&#xE939;" FontFamily="Segoe MDL2 Assets" FontSize="15"/>
                    <Run x:Uid="Feedback"/>
                </TextBlock>
            </Button>

            <TextBlock x:Uid="FeedbackText"
                       Foreground="{StaticResource LightTextForegroundBrush}"
                       FontSize="12"
                       TextWrapping="WrapWholeWords"
                       Margin="{StaticResource PanelGapMargin}"
                       />
        </StackPanel>
    </StackPanel>
</UserControl>