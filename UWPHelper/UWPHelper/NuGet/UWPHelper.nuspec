<?xml version="1.0" encoding="utf-8"?>
<package>
  <metadata>
    <id>UWPHelper</id>
    <version>1.4.6-alpha1</version>
    <title>UWPHelper</title>
    <authors>Marian Dolinský</authors>
    <owners>Marian Dolinský</owners>
    <licenseUrl>https://github.com/bramborman/UWPHelper/blob/master/LICENSE</licenseUrl>
    <projectUrl>https://github.com/bramborman/UWPHelper</projectUrl>
    <iconUrl>https://raw.githubusercontent.com/bramborman/UWPHelper/master/Assets/UWPHelper_Logo.png</iconUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>A set of useful UWP tools such as converters, triggers, custom controls and helpers. </description>
    <releaseNotes>First release</releaseNotes>
    <copyright>© 2017 Marian Dolinský</copyright>
    <tags>UWP Toolkit Helper Helpers XAML C#</tags>
    <dependencies>
      <group targetFramework="uap10.0">
        <dependency id="Newtonsoft.Json" version="9.0.1"/>
        <dependency id="Microsoft.Services.Store.SDK" version="10.1610.31001"/>
      </group>
    </dependencies>
  </metadata>
  <files>
        <!-- Causes referencing this NuGet package to also automatically reference the relevant extension SDKs. -->
        <file src="UWPHelper.targets" target="build\uap10.0\UWPHelper.targets" />

        <!-- Architecture-independent reference library for use at compile-time; generated by the PowerShell script. -->
        <file src="..\bin\Reference\Release\UWPHelper.dll" target="ref\uap10.0"/>

        <!-- XML documentation file goes together with the reference library. -->
        <!--TODO: <file src="..\bin\x86\Release\UWPHelper.xml" target="ref\uap10.0"/>-->

        <!-- Resource files go together with the reference library. -->
        <file src="..\bin\x86\Release\UWPHelper.pri" target="ref\uap10.0"/>
        <file src="..\bin\x86\Release\UWPHelper\**" target="ref\uap10.0\UWPHelper"/>

        <!-- The architecture-specific files go in architecture-specific directories. -->
        <file src="..\bin\x86\Release\UWPHelper.dll" target="runtimes\win10-x86\lib\uap10.0"/>
        <file src="..\bin\x86\Release\UWPHelper.pdb" target="runtimes\win10-x86\lib\uap10.0"/>

        <file src="..\bin\x64\Release\UWPHelper.dll" target="runtimes\win10-x64\lib\uap10.0"/>
        <file src="..\bin\x64\Release\UWPHelper.pdb" target="runtimes\win10-x64\lib\uap10.0"/>

        <file src="..\bin\arm\Release\UWPHelper.dll" target="runtimes\win10-arm\lib\uap10.0"/>
        <file src="..\bin\arm\Release\UWPHelper.pdb" target="runtimes\win10-arm\lib\uap10.0"/>
    </files>
</package>